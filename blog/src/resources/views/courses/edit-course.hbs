<div class='container'>
    <h2>Chỉnh sửa khoá học</h2>
    <div class='row'>
        <div class='col-lg-12'>
            <form
                method='post'
                action='/courses/edit/{{course._id}}?_method=PUT'
            >
                <div class='form-group'>
                    <input
                        type='text'
                        class='form-control'
                        name='name'
                        placeholder='Tên khoá học'
                        value='{{course.name}}'
                    />
                </div>
                <div class='form-group'>
                    <textarea
                        type='text'
                        class='form-control'
                        name='description'
                        placeholder='Mô tả'
                    >{{course.description}}</textarea>
                </div>
                <div class='form-group'>
                    <input
                        type='text'
                        class='form-control'
                        name='videoId'
                        placeholder='VideoId'
                        value='{{course.videoId}}'
                    />
                </div>
                <button type='submit' class='btn btn-primary'>Lưu</button>
            </form>
        </div>
    </div>
</div>